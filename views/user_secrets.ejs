<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Secrets</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            padding-top: 20px;
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #343a40;
        }

        .card-text {
            font-size: 1rem;
            color: #6c757d;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color:blue;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    <%- include('header.ejs') %>
    <div class="container">
        <h1>Secrets of <span style="color: purple;"><%= user.name.charAt(0).toUpperCase() + user.name.slice(1) %></span></h1>
        <br>

        <% if (user.secrets.length > 0) { %>
            <% user.secrets.forEach(secret => { %>
                <div class="card my-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= secret.title %></h5>
                        <p class="card-text"><%= secret.secret %></p>
                    </div>
                    <!-- Delete button form -->
                    <form action="/delete-secret/<%= secret._id %>" method="post" class="d-inline">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm p-1 ml-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M1.5 2.5a.5.5 0 0 1 1 0V13a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2.5a.5.5 0 0 1 1 0V13a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V2.5zM2 1.5V0h1v1.5a.5.5 0 0 0 1 0V0h6v1.5a.5.5 0 0 0 1 0V0h1v1.5a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3z"/>
                            </svg>
                        </button>
                    </form>   <br/>              
                </div>
            <% }); %>
        <% } else { %>
            <p>No secrets found.
                <a href ="/compose">Compose </a>
            </p>
        <% } %>

        <a href="/" class="btn btn-primary  btn-sm p-1">Back to Home</a>
    </div>
</body>

</html>
